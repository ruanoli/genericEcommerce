@model Order;

@{
    ViewBag.Title = "Pedido Detalhado";
}

<div class="container mt-1">
    <div class="jumbotron">
        <h3>@ViewBag.CheckoutMessage</h3>
    </div>

    <div class="card">
        <div class="card-body">
            <p><strong>Compra Realizada Por:</strong> @Model.Name</p>
            <p><strong>Data do Pedido:</strong> @Model.OrderDispatched.Value.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Número do Pedido:</strong> @Model.OrderId</p>
            <hr />
            <table class="table table-striped">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Game</th>
                    <th>Preço</th>
                </tr>

                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td><img src="@item.Game.ImageURL" width="40" height="40" /></td>
                        <td>@item.Quantity</td>
                        <td>@item.Game.Name</td>
                        <td>@item.Game.Price</td>
                    </tr>
                }
            </table>

            <br />

            <p><strong>Valor Total:</strong></p> <h5>@Model.TotalOrderValue.ToString("C2")</h5>
        </div>
    </div>
</div>

<div class="form-group" style="text-align :center">
    <h5>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h5>
</div>