@model GameListViewModel

<div class="row">
    <div class="mb-3 col-md-8">
        <h2>@Model.CurrentCategory</h2>

    </div>

    <div class="mb-3 col-md-4">
        @await Component.InvokeAsync("MenuCategory")

    </div>
</div>




<div class="container">
    <div class="row">
        @if (Model.Games != null)
        {
            @foreach (var item in Model.Games)
            {
                <partial name="_GameResume" for="@item" />
            }
        }
        else
        {
            <h1>Não há jogos cadastrados.</h1>
        }
    </div>
</div>
