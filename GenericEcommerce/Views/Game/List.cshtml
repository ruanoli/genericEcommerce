@model IEnumerable<GenericEcommerce.Models.Game>

<h2>Todos os Jogos</h2>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-4 col-sm-4">
                <p><img src="@item.ImageURL" style="height:220px; width:220px" class="img-fluid" /></p>
                <h4>@item.Name</h4>
                <h3>@item.Price.ToString("c")</h3>
                <p>@item.ShortDescription</p>
            </div>
        }
    </div> 
</div>
