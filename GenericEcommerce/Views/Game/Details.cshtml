@model Game

<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="card" style="width: 27rem;">
            <img src="@Model.ImageURL" class="card-img-top" alt="Imagem dos Jogos.">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.LongDescription</p>
                <div class="btn btn-group align-content-lg-end">
                    <a asp-controller="Game" asp-action="List" class="btn btn-secondary ">Voltar para os Jogos</a>
                    <a asp-controller="ShoppingCart" asp-action="AddItemToCart" asp-route-gameId="@Model.GameId" class="btn btn-success">
                        Adicionar ao Carrinho
                    </a>
                </div>           
            </div>
        </div>
    </div>
</div>